<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rain_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/playerzone"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp" >

        

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:enabled="true"
            android:src="@drawable/back_button_selector" />

        <ImageView
            android:id="@+id/next_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next_button_selector" />

        <ImageView
            android:id="@+id/shareimage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/next_image"
            android:layout_toRightOf="@+id/play_pause_image"
            android:src="@drawable/ic_share_white_48dp" />

        <ImageView
            android:id="@+id/play_pause_image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_play_circle_outline_white_48dp" />
    </RelativeLayout>

</RelativeLayout>